{
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,

    "lib": ["dom", "es2021", "webworker"],
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    "types": ["node"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["scripts", "types/**/*.d.ts"]
}
