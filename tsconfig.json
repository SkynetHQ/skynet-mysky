{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,

    "lib": ["dom", "es2021"],
    "target": "es6",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["utilities", "src", "tests", "types/**/*.d.ts"]
}
