#!/bin/bash

{
    printf "Version:\n";
    node -p "require('./package.json').version";

    printf "\nMode:\n";
    echo "${SKYNET_MYSKY_ENV:-production}";

    printf "\nBuild info";
    printf "\n==========\n";

    printf "\nBranch:\n";
    git describe --all --long;

    printf "\nLocal changes:\n";
    git diff --name-only

    printf "\nLocal links:\n";
    find node_modules -maxdepth 1 -type l;
} > dist/version.txt
